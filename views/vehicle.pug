  - vehicles = results
  div(class="container-fluid") 
   div(class="row")
    each vehicle,index in vehicles
        div(class="col-sm-2" onclick=`buy(${index+1})`) name: #{vehicle.name} , type: #{vehicle.type} , noofpassengers: #{vehicle.noofpassangers};

    script. 
     function buy(index)
     {
        alert(`You purchased Item ${index}`)
     }